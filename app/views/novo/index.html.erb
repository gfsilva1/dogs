<h1>Here are the breeds =) </h1>

<%= form_tag root_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a breed"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<table>
  <thead>
    <td>Ra√ßa</td>
    <td>Expectativa de vida</td>
    <td>Temperamento</td>
    <td>Grupo</td>
  </thead>

  <tbody>
      <%  if params[:query].present? %>
        <tr>
          <td><%= @racas["name"] %></td>
          <td><%= @racas["life_span"] %></td>
          <td><%= @racas["temperament"] %></td>
          <td><%= @racas["breed_group"] %></td>
        </tr>
      <% else %>
        <%= paginate @paginado %>
        <%  @paginado.each do |name| %>
          <tr>
            <td><%= link_to name["name"], show_path(id: name["id"])%></td>
            <td><%= name["life_span"] %></td>
            <td><%= name["temperament"] %></td>
            <td><%= name["breed_group"] %></td>
          </tr>
        <% end %>
      <% end %>
  </tbody>
</table>
